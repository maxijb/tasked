div(ng-repeat="identity in identities")
	h2
		img(src="{{identity.icon || 'http://example.com'}}")
		span {{ "%s's boards" | i18n:[identity.name]}}
		action-button-with-event(text="{{'createNewBoard' | i18n }}" kind="mentira" action="openCreatePopup(identity, event)")

basic-popup(modal="false", kind="createBoard", close-button="true", ng-if="newBoardPopup.visible", close-button-action="closeCreatePopup()")
	create-board-form(user="newBoardPopup.user", cancel="closeCreatePopup()")
					


